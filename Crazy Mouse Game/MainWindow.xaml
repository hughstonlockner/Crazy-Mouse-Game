        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crazy_Mouse_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="0,0,-8,-21">
        <Button x:Name="xTheButton" Content="Click Me!!" HorizontalAlignment="Left" VerticalAlignment="Top" Width="207" RenderTransformOrigin="0.504,0.549" Margin="300,150,0,0" Height="135" Click="first_button_Click"/>
        <Label x:Name="TimerLabel" Content="0" FontFamily="Segoe U" FontSize="30" HorizontalAlignment="Right" VerticalContentAlignment="Top"/>
        <TextBlock x:Name="xMyScore" HorizontalAlignment="Left" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Margin="365,74,0,0" Height="35" Width="92" FontSize="30"/>
    </Grid>
</Window>